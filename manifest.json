{
  "name": "Chrome Typist",
  "description": "Chrome extension for faster browser use, especially with complex web apps.",
  "version": "0.1",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["dist/content.bundle.js"]
  }],
  "web_accessible_resources": [
    "dist/cmdline.html"
  ],
  "permissions": [
    "clipboardWrite"
  ],
  "background": {
    "persistent": false,
    "scripts": ["dist/background.bundle.js"]
  },
  "commands": {
    "cmdline": {
      "suggested_key": {
        "default": "Ctrl+F",
        "mac": "MacCtrl+F"
      },
      "description": "Enter cmdline mode"
    },
    "exit": {
      "suggested_key": {
        "default": "Ctrl+C",
        "mac": "MacCtrl+C"
      },
      "description": "Exit current mode"
    }
  },
  "manifest_version": 2
}
